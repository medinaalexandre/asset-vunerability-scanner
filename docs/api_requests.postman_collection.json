{
	"info": {
		"_postman_id": "ccb3e8e8-7ee1-416e-bbf8-d1464e85f958",
		"name": "Asset Vulnerability Scanner API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
